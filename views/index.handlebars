<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center">Burger Time</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

    <br>

    <h3 class="text-center mt-5 mb-3">Add a Burger!</h3>

    <form class="text-center create-form">

        <div class="form-group">
            <label for="bu"></label>Type of Burger:</label>
            <input type="text" id="bu" name="burger_name">
        </div>

        <button class="btn btn-success mb-5" type="submit">Add Burger</button>

    </form>



</div>